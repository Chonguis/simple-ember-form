<form id="mainForm" class="container" {{action 'submitForm' on="submit"}}>

  {{main-form type="text" placeholder="Name" value=name id="nameId" label="Name"}}

  {{main-form type="phone" placeholder="Phone" value=phone id="phoneId" label="Phone"}}

  {{main-form type="email" placeholder="Email" value=email id="emailId" label="Email"}}
  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
